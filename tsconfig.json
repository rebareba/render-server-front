{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "strict": true, 
    "baseUrl": "./",
    "paths": {
      "@/*": ["."],
      "@src/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true 
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
